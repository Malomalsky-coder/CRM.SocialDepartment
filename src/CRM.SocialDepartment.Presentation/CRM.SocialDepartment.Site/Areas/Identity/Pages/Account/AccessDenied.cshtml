@page
@model AccessDeniedModel
@{
    ViewData["Title"] = "Доступ запрещен";
    Layout = "_LayoutWithoutContainer";
}

<div class="auth-card">
    <div class="text-center mb-4">
        <div class="mb-3">
            <i class="fa fa-ban fa-3x text-danger"></i>
        </div>
        <h1 class="h3 mb-2">Доступ запрещен</h1>
        <p class="text-muted">У вас недостаточно прав для просмотра этой страницы</p>
    </div>

    <div class="alert alert-danger border-0 mb-4" style="background: rgba(220, 38, 38, 0.1);">
        <div class="d-flex align-items-start">
            <i class="fa fa-shield text-danger me-3 mt-1"></i>
            <div>
                <strong>Ограничение доступа</strong>
                <p class="mb-1">Запрашиваемый ресурс требует дополнительных разрешений.</p>
                <small class="text-muted">
                    <i class="fa fa-info-circle me-1"></i>
                    Обратитесь к администратору системы для получения доступа.
                </small>
            </div>
        </div>
    </div>

    <div class="d-grid gap-2 mb-3">
        <a href="javascript:history.back()" class="btn btn-primary">
            <i class="fa fa-arrow-left me-2"></i>Вернуться назад
        </a>
        <a href="/" class="btn btn-outline-secondary">
            <i class="fa fa-home me-2"></i>На главную
        </a>
        <a asp-page="./Login" class="btn btn-outline-info">
            <i class="fa fa-sign-in me-2"></i>Войти как другой пользователь
        </a>
    </div>
    
    <div class="text-center">
        <small class="text-muted">
            <i class="fa fa-question-circle me-1"></i>
            Нужна помощь? Свяжитесь с поддержкой
        </small>
    </div>
</div>

<script>
    // Добавляем плавную анимацию появления
    document.addEventListener('DOMContentLoaded', function() {
        const authCard = document.querySelector('.auth-card');
        authCard.style.opacity = '0';
        authCard.style.transform = 'translateY(30px)';
        
        setTimeout(() => {
            authCard.style.transition = 'all 0.6s ease-out';
            authCard.style.opacity = '1';
            authCard.style.transform = 'translateY(0)';
        }, 100);
        
        // Добавляем пульсирующий эффект к иконке
        const icon = document.querySelector('.fa-ban');
        if (icon) {
            setInterval(() => {
                icon.style.transform = 'scale(1.1)';
                setTimeout(() => {
                    icon.style.transform = 'scale(1)';
                }, 200);
            }, 2000);
        }
    });
</script>
