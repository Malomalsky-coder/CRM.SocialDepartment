@page
@model ExternalLoginModel
@{
    ViewData["Title"] = "Связать внешний аккаунт";
    Layout = "_LayoutWithoutContainer";
}

<div class="auth-card">
    <div class="text-center mb-4">
        <div class="mb-3">
            <i class="fa fa-link fa-3x text-success"></i>
        </div>
        <h1 class="h3 mb-2">Связать аккаунт</h1>
        <p class="text-muted">Свяжите внешний аккаунт с вашей учетной записью</p>
    </div>

    <div class="alert alert-info border-0 mb-4" style="background: rgba(37, 99, 235, 0.1);">
        <div class="d-flex align-items-start">
            <i class="fa fa-check-circle text-success me-3 mt-1"></i>
            <div>
                <strong>Успешная аутентификация</strong>
                <p class="mb-1">Вы успешно авторизовались через <strong>@Model.ProviderDisplayName</strong>.</p>
                <small class="text-muted">
                    <i class="fa fa-user me-1"></i>
                    Укажите адрес электронной почты для завершения регистрации.
                </small>
            </div>
        </div>
    </div>

    <form id="external-account" asp-page-handler="Confirmation" asp-route-returnUrl="@Model.ReturnUrl" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>
        
        <div class="mb-3">
            <div class="input-group">
                <span class="input-group-text">
                    <i class="fa fa-envelope text-primary"></i>
                </span>
                <input asp-for="Input.Email" class="form-control" autocomplete="email" placeholder="Введите вашу электронную почту" />
            </div>
            <span asp-validation-for="Input.Email" class="invalid-feedback d-block"></span>
            <small class="text-muted">
                <i class="fa fa-info-circle me-1"></i>
                Этот адрес будет использован для входа в систему
            </small>
        </div>
        
        <div class="d-grid mb-4">
            <button id="external-register" type="submit" class="btn btn-primary btn-lg">
                <i class="fa fa-user-plus me-2"></i>Создать аккаунт
            </button>
        </div>
    </form>

    <div class="card border-0 mb-4" style="background: rgba(248, 250, 252, 0.5);">
        <div class="card-body">
            <h6 class="card-title">
                <i class="fa fa-shield text-primary me-2"></i>
                Безопасность и конфиденциальность
            </h6>
            <ul class="list-unstyled mb-0 small">
                <li class="mb-1">
                    <i class="fa fa-check text-success me-2"></i>
                    Мы не сохраняем ваш пароль от внешнего сервиса
                </li>
                <li class="mb-1">
                    <i class="fa fa-check text-success me-2"></i>
                    Доступ можно отозвать в любое время
                </li>
                <li class="mb-0">
                    <i class="fa fa-check text-success me-2"></i>
                    Данные передаются по защищенному соединению
                </li>
            </ul>
        </div>
    </div>
    
    <div class="text-center">
        <a class="text-decoration-none" asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl">
            <i class="fa fa-arrow-left me-1"></i>Вернуться к входу
        </a>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            var authCard = document.querySelector('.auth-card');
            authCard.style.opacity = '0';
            authCard.style.transform = 'translateY(30px)';
            
            setTimeout(function() {
                authCard.style.transition = 'all 0.6s ease-out';
                authCard.style.opacity = '1';
                authCard.style.transform = 'translateY(0)';
            }, 100);

            var emailInput = document.querySelector('input');
            if (emailInput) {
                emailInput.focus();
                
                emailInput.addEventListener('input', function() {
                    var emailRegex = new RegExp('[\\w\\.-]+@@[\\w\\.-]+\\.[a-zA-Z]{2,}');
                    var submitBtn = document.querySelector('button[type="submit"]');
                    
                    if (this.value && emailRegex.test(this.value)) {
                        this.classList.remove('is-invalid');
                        this.classList.add('is-valid');
                        submitBtn.disabled = false;
                    } else if (this.value) {
                        this.classList.remove('is-valid');
                        this.classList.add('is-invalid');
                        submitBtn.disabled = true;
                    } else {
                        this.classList.remove('is-valid', 'is-invalid');
                        submitBtn.disabled = false;
                    }
                });
            }

            var successIcon = document.querySelector('.fa-check-circle');
            if (successIcon) {
                setTimeout(function() {
                    successIcon.style.transform = 'scale(1.2)';
                    setTimeout(function() {
                        successIcon.style.transform = 'scale(1)';
                    }, 200);
                }, 1000);
            }
            
            var externalBtn = document.getElementById('external-register');
            if (externalBtn) {
                externalBtn.addEventListener('click', function() {
                    var btn = this;
                    var icon = btn.querySelector('i');
                    
                    icon.classList.remove('fa-user-plus');
                    icon.classList.add('fa-spinner', 'fa-spin');
                    btn.disabled = true;
                    
                    setTimeout(function() {
                        icon.classList.remove('fa-spinner', 'fa-spin');
                        icon.classList.add('fa-user-plus');
                        btn.disabled = false;
                    }, 3000);
                });
            }
        });
    </script>
} 