@{
    ViewData["Title"] = "Список задач";
}

@section Styles
{
    <link href="~/lib/datatables.net-bs5/css/jquery.datatables.css" rel="stylesheet" />
    <link href="~/lib/datatables.net-bs5/css/datatables.bootstrap5.min.css" rel="stylesheet" />
    <link href="~/lib/datatables.net-bs5/css/searchpanes.bootstrap5.min.css" rel="stylesheet" />
    <link href="~/lib/datatables.net-bs5/css/fixedheader.bootstrap5.min.css" rel="stylesheet" />
    <link href="~/lib/datatables.net-bs5/css/scroller.bootstrap5.min.css" rel="stylesheet" />
}

@section Scripts
{
    <script src="~/lib/datatables.net-bs5/js/jquery.datatables.min.js"></script>
    <script src="~/lib/datatables.net-bs5/js/datatables.bootstrap5.min.js"></script>
    <script src="~/lib/datatables.net-bs5/js/searchpanes.bootstrap5.min.js"></script>
    <script src="~/lib/datatables.net-bs5/js/fixedheader.bootstrap5.min.js"></script>
    <script src="~/lib/datatables.net-bs5/js/scroller.bootstrap5.min.js"></script>
    <script src="~/js/assignment.js"></script>
    <script src="~/js/add-assignment-form-validation.js"></script>
    @await Html.PartialAsync("_ValidationScriptsPartial")
}

<div id="form-modal" class="modal fade" tabindex="-1" role="dialog" data-backdrop="static" data-keyboard="false">
    <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"></h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
            </div>
        </div>
    </div>
</div>

<div class="modern-datatable-container">
    <!-- Заголовок страницы с интегрированными элементами управления -->
    <div class="datatable-header">
        <div class="header-content">
            <div class="header-info">
                <h1 class="page-title">
                    <i class="fa fa-users me-2"></i>
                    <span id="title-text">Список задач</span>
                    <span id="records-badge" class="badge bg-primary ms-2">0</span>
                </h1>
                <p class="page-subtitle">
                    <i class="fa fa-heartbeat me-1"></i>
                    Управление задачами
                    <span class="status-indicator ms-2" id="connection-status">
                        <i class="fa fa-circle text-success"></i>
                        <small>Подключено</small>
                    </span>
                </p>
            </div>
            <div class="header-actions">
                <div class="btn-group me-2" role="group">
                    <button id="add-assignment" class="btn btn-primary">
                        <i class="fa fa-plus me-2"></i>Добавить задачу
                    </button>
                    <button id="reload-data" class="btn btn-primary" title="Обновить данные">
                        <i class="fa fa-refresh"></i>
                    </button>
                </div>
                <div class="btn-group me-2" role="group">
                    <button id="table-settings" class="btn btn-outline-secondary" title="Настройки таблицы" data-bs-toggle="modal" data-bs-target="#table-settings-modal">
                        <i class="fa fa-cog"></i>
                    </button>
                    <button id="fullscreen-toggle" class="btn btn-outline-secondary" title="Полноэкранный режим">
                        <i class="fa fa-expand"></i>
                    </button>
                </div>
                <div class="dropdown">
                    <button class="btn btn-outline-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown">
                        <i class="fa fa-ellipsis-v me-2"></i>Действия
                    </button>
                    <ul class="dropdown-menu dropdown-menu-end">
                        <li><a class="dropdown-item" href="#"><i class="fa fa-download me-2"></i>Экспорт Excel</a></li>
                        <li><a class="dropdown-item" href="#"><i class="fa fa-file-pdf-o me-2"></i>Экспорт PDF</a></li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="header-stats">
            <div class="stat-item">
                <i class="fa fa-clock-o text-muted me-1"></i>
                <small>Последнее обновление: <span id="last-update" class="fw-medium">сейчас</span></small>
            </div>
            <div class="stat-item">
                <i class="fa fa-wifi text-success me-1"></i>
                <small>Режим реального времени: <span class="text-success fw-medium">Активен</span></small>
            </div>
        </div>
    </div>

    <!-- Основная таблица -->
    @* <div class="modern-datatable-container"> *@
    <div class="datatable-card" id="datatable-main-card">
        <div class="table-container">
            <table id="table" class="table table-custom table-hover mb-0">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Дата приема заявки от отделения</th>
                        <th>Номер отделения</th>
                        <th>Описание</th>
                        <th>Дата направления</th>
                        <th>Куда направили документы</th>
                        <th>Что сделано</th>
                        <th>Дата передачи в отделение</th>
                        <th>Исполнитель</th>
                        <th>Примечание</th>
                        <th>Дата создания задачи</th>
                        <th>Пациент</th>
                        @* <th>Помечен как в архиве (пациент выписан)</th> *@
                        @* <th>Помечен как удаленный</th> *@
                    </tr>
                </thead>
                <tbody>
                </tbody>
            </table>
        </div>
    </div>
    @* </div> *@
</div>